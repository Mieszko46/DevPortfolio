#:import C kivy.utils.get_color_from_hex

<MyButton>
    background_normal : 'button_normal.png'
    background_down: 'button_down.png'
    border : (3,3,3,3)
<ColorButton@MyButton>
    group : 'color'
    on_release: app.canvas_widget.set_color(self.background_color)
<LineWidthButton@MyButton>
    group:'linewidth'
    background_color : C('#808080')
    on_release: app.canvas_widget.set_line_width(self.text)
<CanvasWidget>

    MDScreen:

        pos:300, 530
        width:200
        height:50
        md_bg_color: 0.0, 0.0, 0.0, 0.8
        MDLabel:
            id: password
            text: "word"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Custom"
            text_color: 1.0, 1.0, 1.0, 0.9
  
    MDBoxLayout:
        
        md_bg_color: 0.9, 0.9, 0.7, 0.6
        orientation: "vertical"
        pos: 650,100
        width :150
        height:480
        MDToolbar:
            title: "Chat"
            anchor_title: "center"
            md_bg_color: 0.0, 0.0, 0.0, 0.8
        MDLabel:
            id: chat
            text: ""

    MDBoxLayout:
        md_bg_color: 0.9, 0.9, 0.7, 0.6
        orientation: "vertical"
        pos: 5,0
        width :142
        height:420

        MDToolbar:
            title: "Scores"
            anchor_title: "center"
            md_bg_color: 0.0, 0.0, 0.0, 0.8
        MDLabel:
            id: scores
            text: ""  
            bold: "true"
    
    BoxLayout:
        orientation : 'vertical'
        padding: 2
        spacing :2
        pos:0,420
        x : 0
        width: 150
        height :160
        Button:
            text:'Clear'
            font_size:20
            background_normal : 'red_button_normal.png'
            background_down : 'red_button_down.png'
            border: (2,2,2,2)
            on_release: root.clear_canvas()

        LineWidthButton:
            text : 'Thin'
        LineWidthButton:
            text : 'Normal'
            state: 'down'
        LineWidthButton:
            text : 'Thick'

    BoxLayout:
        orientation: 'horizontal'
        padding : 2
        spacing : 2
        x: 0
        y: 0
        width : 500
